<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CardView_1_top_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#AB2196F3"
    app:cardCornerRadius="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CSL_1_top_2"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="#542196F3">


        <TextView
            android:id="@+id/TV_2_questionID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="題目ID"
            app:layout_constraintBottom_toTopOf="@+id/TV_1_questionTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TV_1_questionTitle"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="#FFFFFF"
            android:text="題目N"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_2_deleteQuestion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/TV_1_questionTitle"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btn_2_deleteQuestion"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="1dp"
                android:text="刪除"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintBottom_toBottomOf="@+id/btn_1_jumpToDetail"
                app:layout_constraintEnd_toStartOf="@+id/btn_1_jumpToDetail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btn_1_jumpToDetail"
                app:layout_constraintVertical_bias="0.5" />

            <Button
                android:id="@+id/btn_1_jumpToDetail"
                android:layout_width="71dp"
                android:layout_height="38dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="10dp"
                android:text="詳情"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_2_deleteQuestion"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>